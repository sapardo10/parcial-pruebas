<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/drawer_layout" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout android:id="@+id/appBar" android:layout_width="match_parent" android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar android:id="@+id/toolbar" android:background="?attr/colorPrimary" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="?attr/actionBarSize" android:layout_alignParentTop="true"/>
            <com.viewpagerindicator.CirclePageIndicator android:id="@+id/page_indicator" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="-12dp" android:layout_marginBottom="4dp" app:fillColor="?android:attr/textColorSecondary" app:radius="4dp" app:strokeColor="?android:attr/textColorSecondary"/>
        </android.support.design.widget.AppBarLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/playtime_layout" android:background="?attr/overlay_drawable" android:paddingTop="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layoutDirection="ltr">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/text_size_micro" android:textColor="?android:attr/textColorSecondary" android:id="@+id/txtvPosition" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="@string/position_default_label" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_marginStart="8dp" android:layout_alignParentStart="true"/>
                <TextView android:textSize="@dimen/text_size_micro" android:textColor="?android:attr/textColorSecondary" android:id="@+id/txtvLength" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:text="@string/position_default_label" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="8dp" android:layout_alignParentEnd="true"/>
                <SeekBar android:id="@+id/sbPosition" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:max="500" android:layout_toLeftOf="@+id/txtvLength" android:layout_toRightOf="@+id/txtvPosition" android:layout_centerVertical="true" android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_toStartOf="@+id/txtvLength" android:layout_toEndOf="@+id/txtvPosition"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/player_control" android:background="?attr/overlay_background" android:paddingTop="4dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageButton android:id="@+id/butPlay" android:background="?attr/selectableItemBackground" android:layout_width="@dimen/audioplayer_playercontrols_length" android:layout_height="@dimen/audioplayer_playercontrols_length" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:src="?attr/av_play" android:scaleType="fitCenter" android:layout_centerHorizontal="true" android:contentDescription="@string/pause_label" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
                <ImageButton android:id="@+id/butRev" android:background="?attr/selectableItemBackground" android:layout_width="@dimen/audioplayer_playercontrols_length" android:layout_height="@dimen/audioplayer_playercontrols_length" android:layout_marginLeft="16dp" android:src="?attr/av_rew_big" android:scaleType="fitCenter" android:layout_toLeftOf="@+id/butPlay" android:contentDescription="@string/rewind_label" android:layout_marginStart="16dp" android:layout_toStartOf="@+id/butPlay"/>
                <TextView android:textSize="10sp" android:textColor="?android:attr/textColorSecondary" android:gravity="center" android:id="@+id/txtvRev" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="-8dp" android:text="30" android:layout_below="@+id/butRev" android:layout_alignLeft="@+id/butRev" android:layout_alignRight="@+id/butRev" android:layout_alignStart="@+id/butRev" android:layout_alignEnd="@+id/butRev"/>
                <Button android:textSize="@dimen/text_size_medium" android:id="@+id/butPlaybackSpeed" android:background="?attr/selectableItemBackground" android:layout_width="@dimen/audioplayer_playercontrols_length" android:layout_height="@dimen/audioplayer_playercontrols_length" android:src="?attr/av_fast_forward" android:maxLines="1" android:layout_toLeftOf="@+id/butRev" android:contentDescription="@string/set_playback_speed_label" android:textAllCaps="false" android:layout_toStartOf="@+id/butRev"/>
                <ImageButton android:id="@+id/butCastDisconnect" android:background="?attr/selectableItemBackground" android:visibility="gone" android:layout_width="@dimen/audioplayer_playercontrols_length" android:layout_height="@dimen/audioplayer_playercontrols_length" android:src="?attr/ic_cast_disconnect" android:scaleType="fitCenter" android:layout_toLeftOf="@+id/butRev" android:contentDescription="@string/cast_disconnect_label" android:layout_toStartOf="@+id/butRev"/>
                <ImageButton android:id="@+id/butFF" android:background="?attr/selectableItemBackground" android:layout_width="@dimen/audioplayer_playercontrols_length" android:layout_height="@dimen/audioplayer_playercontrols_length" android:layout_marginRight="16dp" android:src="?attr/av_ff_big" android:scaleType="fitCenter" android:layout_toRightOf="@+id/butPlay" android:contentDescription="@string/fast_forward_label" android:layout_marginEnd="16dp" android:layout_toEndOf="@+id/butPlay"/>
                <TextView android:textSize="10sp" android:textColor="?android:attr/textColorSecondary" android:gravity="center" android:id="@+id/txtvFF" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="-8dp" android:text="30" android:layout_below="@+id/butFF" android:layout_alignLeft="@+id/butFF" android:layout_alignRight="@+id/butFF" android:layout_alignStart="@+id/butFF" android:layout_alignEnd="@+id/butFF"/>
                <ImageButton android:id="@+id/butSkip" android:background="?attr/selectableItemBackground" android:layout_width="@dimen/audioplayer_playercontrols_length" android:layout_height="@dimen/audioplayer_playercontrols_length" android:src="?attr/av_skip_big" android:scaleType="fitCenter" android:layout_toRightOf="@+id/butFF" android:contentDescription="@string/skip_episode_label" android:layout_toEndOf="@+id/butFF"/>
            </RelativeLayout>
        </LinearLayout>
        <android.support.v4.view.ViewPager android:id="@+id/pager" android:layout_width="match_parent" android:layout_height="0dp" android:foreground="?android:attr/windowContentOverlay" android:layout_above="@+id/playtime_layout" android:layout_below="@+id/appBar"/>
        <View android:id="@+id/shadow" android:background="@drawable/shadow" android:layout_width="match_parent" android:layout_height="4dp" android:layout_below="@+id/appBar"/>
    </RelativeLayout>
    <include layout="@layout/nav_list"/>
</android.support.v4.widget.DrawerLayout>
