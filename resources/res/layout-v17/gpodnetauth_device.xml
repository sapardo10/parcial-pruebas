    <TextView android:textSize="@dimen/text_size_medium" android:textColor="?android:attr/textColorSecondary" android:id="@+id/txtvChooseExistingDevice" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="16dp" android:text="@string/gpodnetauth_device_chooseExistingDevice" android:layout_below="@+id/butCreateNewDevice"/>
