<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:id="@+id/txtvTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="16dp" android:text="@string/gpodnetauth_device_title" android:layout_alignParentTop="true" style="@style/AntennaPod.TextView.Heading"/>
    <TextView android:textSize="@dimen/text_size_medium" android:textColor="?android:attr/textColorSecondary" android:id="@+id/txtvDescription" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="16dp" android:text="@string/gpodnetauth_device_descr" android:layout_below="@+id/txtvTitle"/>
    <EditText android:id="@+id/etxtCaption" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="8dp" android:hint="@string/gpodnetauth_device_caption" android:layout_below="@+id/txtvDescription"/>
    <TextView android:textSize="@dimen/text_size_medium" android:textColor="?android:attr/textColorSecondary" android:id="@+id/txtvDeviceID" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="8dp" android:text="@string/gpodnetauth_device_deviceID" android:layout_alignLeft="@+id/etxtCaption" android:layout_alignTop="@+id/etxtDeviceID" android:layout_alignStart="@+id/etxtCaption"/>
    <EditText android:id="@+id/etxtDeviceID" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_margin="8dp" android:layout_toRightOf="@+id/txtvDeviceID" android:layout_below="@+id/etxtCaption" android:layout_alignParentRight="true" android:layout_toEndOf="@+id/txtvDeviceID" android:layout_alignParentEnd="true"/>
    <Button android:id="@+id/butCreateNewDevice" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="8dp" android:text="@string/gpodnetauth_device_butCreateNewDevice" android:layout_below="@+id/etxtDeviceID" android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
    <TextView android:textSize="@dimen/text_size_small" android:textColor="@color/download_failed_red" android:id="@+id/txtvError" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_margin="16dp" android:layout_toLeftOf="@+id/butCreateNewDevice" android:layout_below="@+id/etxtDeviceID" android:layout_alignParentLeft="true" android:layout_toStartOf="@+id/butCreateNewDevice" android:layout_alignParentStart="true"/>
