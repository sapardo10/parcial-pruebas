<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/feeditemlist_header"/>
    <ScrollView android:scrollbarStyle="outsideOverlay" android:id="@+id/scrollView" android:paddingLeft="16dp" android:paddingRight="16dp" android:paddingBottom="8dp" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <android.support.v7.widget.GridLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" app:columnCount="2" app:rowCount="1">
                <TextView android:id="@+id/txtvFeedAutoDelete" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="@string/auto_delete_label" android:layout_marginEnd="10dp" app:layout_column="0" app:layout_gravity="center_vertical" app:layout_row="0"/>
                <Spinner android:entries="@array/spnAutoDeleteItems" android:id="@+id/spnAutoDelete" android:clickable="true" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginTop="8dp" android:dropDownWidth="wrap_content" android:spinnerMode="dropdown" app:layout_column="1" app:layout_gravity="center" app:layout_row="0"/>
            </android.support.v7.widget.GridLayout>
            <CheckBox android:enabled="true" android:textColor="?android:attr/textColorPrimary" android:id="@+id/cbxKeepUpdated" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:checked="true" android:text="@string/keep_updated"/>
            <TextView android:textSize="@dimen/text_size_medium" android:textColor="?android:attr/textColorPrimary" android:id="@+id/txtvAuthentication" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/authentication_label"/>
            <TextView android:textSize="@dimen/text_size_small" android:textColor="?android:attr/textColorPrimary" android:id="@+id/txtvAuthenticationDescr" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/authentication_descr"/>
            <android.support.v7.widget.GridLayout android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" app:columnCount="2" app:rowCount="3">
                <TextView android:textColor="?android:attr/textColorPrimary" android:id="@+id/txtvUsername" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:layout_marginBottom="8dp" android:text="@string/username_label" android:layout_marginEnd="8dp" app:layout_column="0" app:layout_row="0"/>
                <EditText android:id="@+id/etxtUsername" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="140sp" android:layout_height="wrap_content" android:hint="@string/username_label" android:cursorVisible="true" app:layout_column="1" app:layout_row="0"/>
                <TextView android:textColor="?android:attr/textColorPrimary" android:id="@+id/txtvPassword" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:layout_marginBottom="8dp" android:text="@string/password_label" android:layout_marginEnd="8dp" app:layout_column="0" app:layout_row="1"/>
                <EditText android:id="@+id/etxtPassword" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="140sp" android:layout_height="wrap_content" android:hint="@string/password_label" android:cursorVisible="true" android:inputType="textPassword" app:layout_column="1" app:layout_row="1"/>
            </android.support.v7.widget.GridLayout>
            <TextView android:textSize="@dimen/text_size_medium" android:textColor="?android:attr/textColorPrimary" android:id="@+id/txtvAutoDownloadSettings" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/auto_download_settings_label"/>
            <CheckBox android:enabled="false" android:textColor="?android:attr/textColorPrimary" android:id="@+id/cbxAutoDownload" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:checked="false" android:text="@string/auto_download_label"/>
            <TextView android:textSize="@dimen/text_size_medium" android:textColor="?android:attr/textColorPrimary" android:id="@+id/txtvEpisodeFilters" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/episode_filters_label"/>
            <TextView android:textSize="@dimen/text_size_small" android:textColor="?android:attr/textColorPrimary" android:id="@+id/txtvEpisodeFiltersDescription" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/episode_filters_description"/>
            <RadioGroup android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/radio_filter_group" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RadioButton android:id="@+id/radio_filter_include" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/episode_filters_include"/>
                <RadioButton android:id="@+id/radio_filter_exclude" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/episode_filters_exclude"/>
            </RadioGroup>
            <EditText android:layout_gravity="center" android:id="@+id/etxtEpisodeFilterText" android:focusable="true" android:focusableInTouchMode="true" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/episode_filters_hint" android:cursorVisible="true" android:maxLines="20" android:lines="8" android:minLines="1"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
