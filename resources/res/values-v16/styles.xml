<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AntennaPod.Dialog.Title">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/holo_blue_light</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="AntennaPod.TextView.Heading">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="Preference_TextAppearanceMaterialBody2">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">@null</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="Preference_TextAppearanceMaterialSubhead">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">@null</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="SinglePageNavDrawerTextStyle">
        <item name="android:textSize">@dimen/nav_drawer_text_size</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="layout_marginEndPercent">@fraction/nav_drawer_text_margin</item>
        <item name="layout_marginStartPercent">@fraction/nav_drawer_text_margin</item>
        <item name="layout_marginTopPercent">@fraction/nav_drawer_text_margin</item>
    </style>
    <style name="TextAppearance.AppCompat.Tooltip">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>
