<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/bottomBar" android:padding="4dp" android:layout_width="match_parent" android:layout_height="68dp" android:layout_alignParentBottom="true">
        <Button android:textSize="10sp" android:id="@+id/btnAddToQueue" android:background="@android:color/transparent" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/add_to_queue_label" android:drawableTop="?attr/content_new" android:layout_weight="1"/>
        <View android:id="@+id/divider1" android:background="?android:attr/listDivider" android:layout_width="1dp" android:layout_height="match_parent" android:layout_margin="4dp"/>
        <Button android:textSize="10sp" android:id="@+id/btnMarkAsPlayed" android:background="@android:color/transparent" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/mark_read_label" android:drawableTop="?attr/navigation_accept" android:layout_weight="1"/>
        <View android:id="@+id/divider2" android:background="?android:attr/listDivider" android:layout_width="1dp" android:layout_height="match_parent" android:layout_margin="4dp"/>
        <Button android:textSize="10sp" android:id="@+id/btnMarkAsUnplayed" android:background="@android:color/transparent" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/mark_unread_label" android:drawableTop="?attr/navigation_cancel" android:layout_weight="1"/>
        <View android:id="@+id/divider3" android:background="?android:attr/listDivider" android:layout_width="1dp" android:layout_height="match_parent" android:layout_margin="4dp"/>
        <Button android:textSize="10sp" android:id="@+id/btnDownload" android:background="@android:color/transparent" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/download_label" android:drawableTop="?attr/av_download" android:layout_weight="1"/>
        <View android:id="@+id/divider4" android:background="?android:attr/listDivider" android:layout_width="1dp" android:layout_height="match_parent" android:layout_margin="4dp"/>
        <Button android:textSize="10sp" android:id="@+id/btnDelete" android:background="@android:color/transparent" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/remove_episode_lable" android:drawableTop="?attr/content_discard" android:layout_weight="1"/>
    </LinearLayout>
    <View android:id="@+id/divider" android:background="?android:attr/listDivider" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="1dp" android:layout_above="@+id/bottomBar"/>
    <ListView android:id="@android:id/list" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/divider"/>
</RelativeLayout>
